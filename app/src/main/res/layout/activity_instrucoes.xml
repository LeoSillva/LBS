<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".InstrucoesActivity"
    android:id="@+id/linearLayout"
    android:background="@color/colorPrimary">



    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ALGUMAS OBSERVAÇÕES"
        android:textColor="#fff"
        android:textSize="22dp"
        android:layout_marginLeft="60dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="390dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:text="Ao ultilizar a letra 'Ç' é como se ele fosse o C e com uma vibraçao."
            android:textColor="#fff"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="390dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="As letras H e K sao bem parecidas.A letra H é apenas virar,e a letra K é avançar para cima."
            android:textColor="#fff"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="390dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="As letras F e T  são bem parecidas que geralmente confunde. Lembre-se que o dedo polegar está fora o do indicador(Letra F) e a outra pelo contrario o dedo polegar está dentro do indicador(Letra T)."
            android:textColor="#fff"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="390dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="O movimento da letra Z é o msm movimento que o Zorro fazia em seus adversários."
            android:textColor="#fff"
            android:textSize="18dp"
 />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="390dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content"
            android:text='Para fazer duas letras idênticas ("rr","ss","cc")deve arrastar um pouco ao lado de fora( Exceto o "zz" que repete na escrita.'
            android:textColor="#fff"
            android:textSize="18dp"
 />
    </LinearLayout>

