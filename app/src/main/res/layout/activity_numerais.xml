<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".NumeraisActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageNumerais"
            android:layout_width="match_parent"
            android:layout_height="178dp"
            android:contentDescription="TODO"
            android:visibility="invisible"
            app:srcCompat="@drawable/a" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_weight="1">


        <Button
            android:id="@+id/buttonUm"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/botao_customizado1"
            android:text="1"
            android:textColor="#fff"
            android:textSize="20dp" />

        <Button
            android:id="@+id/buttonDois"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/botao_customizado1"
            android:text="2"
            android:textColor="#fff"
            android:textSize="20dp" />

        <Button
            android:id="@+id/buttonTres"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/botao_customizado1"
            android:text="3"
            android:textColor="#fff"
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_weight="1">

        <Button
            android:id="@+id/buttonQuatro"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/botao_customizado1"
            android:text="4"
            android:textColor="#fff"
            android:textSize="20dp" />

        <Button
            android:id="@+id/buttonCinco"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/botao_customizado1"
            android:text="5"
            android:textColor="#fff"
            android:textSize="20dp" />

        <Button
            android:id="@+id/buttonSeis"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/botao_customizado1"
            android:text="6"
            android:textColor="#fff"
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonSete"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/botao_customizado1"
            android:text="7"
            android:textColor="#fff"
            android:textSize="20dp" />

        <Button
            android:id="@+id/buttonOito"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:text="8"
            android:background="@drawable/botao_customizado1"
            android:textColor="#fff"
            android:textSize="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>

        <Button
            android:id="@+id/buttonNove"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/botao_customizado1"
            android:text="9"
            android:textColor="#fff"
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonZero"
            android:layout_width="135dp"
            android:layout_height="70dp"
            android:layout_marginLeft="140dp"
            android:layout_marginRight="140dp"
            android:layout_weight="1"
            android:background="@drawable/botao_customizado1"
            android:text="0"
            android:textColor="#fff"
            android:textSize="20dp" />
    </LinearLayout>

</LinearLayout>